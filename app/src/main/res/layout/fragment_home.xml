<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/search_bar"
                android:focusableInTouchMode="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Cari Judul atau Author"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColorHint="#85C5F4"
                android:background="@drawable/bg_search"
                android:drawableEnd="@drawable/search"
                android:elevation="10dp"
                android:stateListAnimator="@null">
            </EditText>

            <ViewFlipper
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="324dp"
                android:layout_height="184dp"
                android:flipInterval="5000"
                android:autoStart="true"
                android:inAnimation="@animator/slide_in_right"
                android:outAnimation="@animator/slide_out_left">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/contoh_a"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/contoh_bb"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/contoh_c"
                    android:scaleType="centerCrop"/>
            </ViewFlipper>

            <TextView
                android:layout_width="115dp"
                android:layout_height="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Rekomendasi"
                android:textColor="#49A1F1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNovel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scrollbars="none"
                    android:orientation="horizontal"
                    android:elevation="10dp"
                    tools:listitem="@layout/item_novel"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <TextView
                android:layout_width="115dp"
                android:layout_height="20dp"
                android:text="Genre Favorit"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#49A1F1"
                android:textSize="16sp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGenre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scrollbars="none"
                    android:orientation="horizontal"
                    android:elevation="10dp"
                    tools:listitem="@layout/item_genre"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>